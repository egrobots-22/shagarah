<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="اختيار المحاصيل الخاصة بك"
        android:textColor="@color/colorAccentDark"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@drawable/cornered_gray_bg_small_radius"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:elevation="8dp"
        android:hint="بحث"
        android:maxLines="1"
        android:inputType="text"
        android:padding="16dp"
        android:textSize="14sp"
        android:textColorHint="@color/dark_gray" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plants_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/selected_planet_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/cornered_gray_bg_small_radius"
        android:paddingStart="32dp"
        android:paddingTop="4dp"
        android:paddingEnd="32dp"
        android:paddingBottom="4dp"
        android:textSize="16sp"
        android:visibility="gone" />

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/selected_fruits_recycler_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="300dp"-->
<!--        android:layout_margin="16dp"-->
<!--        tools:listitem="@layout/selected_fruit_item_layout"/>-->

</LinearLayout>