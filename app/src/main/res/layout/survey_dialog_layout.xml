<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/q0_view_empty"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/white_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.025" />

        <View
            android:id="@+id/q1_view"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/cornered_accent_bg"
            app:layout_constraintStart_toEndOf="@id/q0_view_empty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/q1_view_empty"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/white_bg"
            app:layout_constraintStart_toEndOf="@id/q1_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.05" />

        <View
            android:id="@+id/q2_view"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/cornered_gray_bg"
            app:layout_constraintStart_toEndOf="@id/q1_view_empty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/q2_view_empty"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/white_bg"
            app:layout_constraintStart_toEndOf="@id/q2_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.05" />

        <View
            android:id="@+id/q3_view"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/cornered_gray_bg"
            app:layout_constraintStart_toEndOf="@id/q2_view_empty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/q3_view_empty"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/white_bg"
            app:layout_constraintStart_toEndOf="@id/q3_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.05" />

        <View
            android:id="@+id/q4_view"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/cornered_gray_bg"
            app:layout_constraintStart_toEndOf="@id/q3_view_empty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

