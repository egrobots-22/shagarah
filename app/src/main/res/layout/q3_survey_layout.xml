<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="أي أجزاء من الأعراض تظهر مصنع ؟"
        android:textColor="@color/colorAccentDark"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@drawable/shagarah_logo" />

    <CheckBox
        android:id="@+id/q3_option1_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="ورقة الشجر"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark" />

    <CheckBox
        android:id="@+id/q3_option2_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="ايقاف"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark" />

    <CheckBox
        android:id="@+id/q3_option3_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="فاكهة"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark" />

    <CheckBox
        android:id="@+id/q3_option4_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="جذور"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark" />

</LinearLayout>